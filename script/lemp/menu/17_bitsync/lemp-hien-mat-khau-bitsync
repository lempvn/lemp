#!/bin/bash
. /home/lemp.conf
if [ ! -f /etc/lemp/btsync.info ]; then
clear
echo "========================================================================= "
echo "Ban chua cai dat BTsync"
/etc/lemp/menu/17_bitsync/lemp-bitsync-menu
else
echo "Please wait..."; sleep 1
clear
echo "========================================================================="
echo "Thong tin quan ly BTsync:"
echo "-------------------------------------------------------------------------"
echo "Link truy cap: http://$serverip:$(grep btport /etc/lemp/btsync.info | awk 'NR==1 {print $3}')"
echo "-------------------------------------------------------------------------"
echo "User: $(grep username /etc/lemp/btsync.info | awk 'NR==1 {print $3}') | Password: $(grep password /etc/lemp/btsync.info | awk 'NR==1 {print $3}')"
echo "-------------------------------------------------------------------------"
echo "BTsync phai duoc bat truoc khi truy cap ! "
/etc/lemp/menu/17_bitsync/lemp-bitsync-menu
fi
